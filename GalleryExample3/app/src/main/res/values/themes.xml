<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="primaryColor" format="color"/>
    <attr name="secondaryColor" format="color"/>
    <attr name="textColor" format="color"/>
    <attr name="altTextColor" format="color"/>
    <attr name="mediumTextColor" format="color"/>
    <attr name="tintIconColor" format="color"/>
    <attr name="altTintIconColor" format="color"/>

    <style name="SimpleDarkTheme">
        <item name="primaryColor">@android:color/black</item>
        <item name="secondaryColor">@android:color/white</item>
        <item name="textColor">@android:color/white</item>
        <item name="altTextColor">@android:color/black</item>
        <item name="mediumTextColor">#323232</item>
        <item name="tintIconColor">@android:color/white</item>
        <item name="altTintIconColor">@android:color/black</item>
    </style>

    <style name="SimpleBrightTheme">
        <item name="primaryColor">@android:color/white</item>
        <item name="secondaryColor">@android:color/black</item>
        <item name="textColor">@android:color/black</item>
        <item name="altTextColor">@android:color/white</item>
        <item name="mediumTextColor">#323232</item>
        <item name="tintIconColor">@android:color/black</item>
        <item name="altTintIconColor">@android:color/white</item>
    </style>

    <style name="SimpleBlueTheme">
        <item name="primaryColor">#7777FF</item>
        <item name="secondaryColor">@color/white</item>
        <item name="textColor">@android:color/white</item>
        <item name="altTextColor">#1111FF</item>
        <item name="mediumTextColor">@android:color/black</item>
        <item name="tintIconColor">@android:color/white</item>
        <item name="altTintIconColor">@android:color/white</item>
    </style>

    <style name="SimplePinkTheme">
        <item name="primaryColor">#FF7777</item>
        <item name="secondaryColor">@color/white</item>
        <item name="textColor">@android:color/white</item>
        <item name="altTextColor">#FF1111</item>
        <item name="mediumTextColor">@android:color/black</item>
        <item name="tintIconColor">@android:color/white</item>
        <item name="altTintIconColor">@android:color/white</item>
    </style>


    <style name="Theme.GalleryExample3" parent="Base.Theme.GalleryExample3" />
</resources>